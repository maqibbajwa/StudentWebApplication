@model  List<StudentWebApplication.Context.Table_Student>

@{
    ViewBag.Title = "StudentList";
}

<table class="table table-hover" style="margin-top:20%" ; id="tblStudent">
    <thead>
        <tr>
            <th>Name</th>
            <th>Father Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>Description</th>
            <th>Image</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Name</td>
            <td>@item.Fname</td>
            <td>@item.Email</td>
            <td>@item.Mobile</td>
            <td>@item.Description</td>
            <td>
                <img src="@Url.Content("data:image/jpg;base64,"+ item.Image)" alt="Not Found" width="80" height="80" class="img-rounded" />
            </td>

            <td>
                <a href="@Url.Action("Student", new { item.ID })" class="btn btn-success">Edit</a>
                <a href="@Url.Action("Delete", new { item.ID })" class="btn btn-danger">Delete</a>
            </td>
        </tr>
        }
    </tbody>



</table>

<script type="text/javascript">

    $(document).ready(function () {
        $("#tblStudent").dataTable({
            "bPaginate": true,
            "bFilter": true,
            "bSort": true
        })
    });
</script>